<%= form_for @attendee, :url => event_attendee_path(@event, @attendee), :method => :patch do |f| %>
  <div class="form-group">
    <%= f.label :name, "Name" %>
    <%= f.text_field :name, :class => "form-control" %>
  </div>
  <div class="form-group">
  <%= f.submit "Update", :class => "btn btn-primary" %>
  </div>
<% end %>